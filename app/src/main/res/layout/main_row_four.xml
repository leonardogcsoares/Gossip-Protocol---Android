            android:paddingStart="16dp"
            android:textSize="@dimen/textSize"
            android:layout_below="@id/messageTitle12"
            android:text="tst"
            android:textStyle="bold"/>
    </RelativeLayout>

</android.support.v7.widget.LinearLayoutCompat>